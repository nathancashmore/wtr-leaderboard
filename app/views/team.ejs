<!DOCTYPE html>
<html>
<head>
    <title><%= __('title') %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
</head>
<body>
<%- include('partials/snow'); %>
<div id="header">
    <img class=image-center src="/images/christmastree.png">
    <h1 class="center" data-test="title">
        <%= __('title-1') %>
        <span class="xmas-red"><%= __('title-2') %></span><%= __('title-3') %><span
                class="xmas-green"><%= __('title-4') %></span>
        <%= __('title-5') %>
    </h1>
</div>
<h1 class="xmas-green center"><%= __('team-title') %></h1>

<div id="team-info" class="limited-width">
    <dl>
        <dt class="xmas-red"><%= __('team-label') %></dt>
        <dd data-test="team-name"><%= __(`team-${team}`) %></dd>
        <dt class="xmas-red"><%= __('score-label') %></dt>
        <dd data-test="team-score"><%= score %></dd>

            <%if (gameOver) { %>
        </dl>
        <% } else { %>
                <dt class="xmas-red"><%=__('button-label')%></dt>
                <dd data-test="button-name"><%=__(`button-name-${button}`)%></dd>
                <dt class="xmas-red"><%=__('clue-label')%></dt>
                <dd data-test="button-clue"><%=__(`button-clue-${button}`)%></dd>
            </dl>
        <% } %>
    <a data-test="leaderboard-button" href="/leaderboard">
        <button type="button"><%=__('leaderboard-button')%></button>
    </a>
    </div>
    </body>
</html>
