<% if (standing.length > 1) { %>
<div>
    <table>
        <tr>
            <th><%= __('team-label') %></th>
            <th><%= __('points-label') %></th>
        </tr>

        <% for(var i = 0; i < standing.length; i++) { %>
        <tr>
            <td data-test="name-<%= i %>">
                <a href="teams/<%= standing[i].name %>">
                    <%= __(`team-${standing[i].name}`) %>
                </a>
            </td>
            <td data-test="score-<%= i %>" class="center"><%= standing[i].score %></td>
        </tr>
        <% } %>
    </table>
</div>
<% } else { %>
<p class="center"><%=__('waiting-text-1')%></p>
<p class="center"><%=__('waiting-text-2')%></p>
<% } %>



